<% quantity = product['quantity'].to_i %>
<% @cart_total = 0 %>

<% if product %>
  <% item_total = product.price_cents * quantity %>
  <% @cart_total = @cart_total+item_total %>

  <tr>
    <td>
      <%= image_tag product.image.tiny %>
    </td>
    <td>
      <h4><%= product.name %></h4>
      <br>
      <p><%= product.description %></p>
    </td>
    <td>
      <%= product.price %>
    </td>
    <td>
      <%= quantity %>
    </td>
    <td>
      <%= item_total %>
    </td>
  </tr>
<% end %>
